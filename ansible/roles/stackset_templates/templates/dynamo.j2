{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create a DynamoDB table",
    "Resources": {
		"DynamoDatabase" : {
            "Type" : "AWS::DynamoDB::Table",
            "Properties" : {
                "AttributeDefinitions" : [
                  {
                    "AttributeName" : "key",
                    "AttributeType" : "S"   
                  }
                ],
                "KeySchema" : [
                  {
                    "AttributeName" : "key",
                    "KeyType" : "HASH"
                  }
                ],
                "ProvisionedThroughput" : {
                  "ReadCapacityUnits" : "500",
                  "WriteCapacityUnits" : "150"
                },
                "TableName" : "table-{{app_name}}"
            }
       }
    },
    "Outputs": {
        "DynamoDatabase": {
		      "Description": "Name of the Dynamo database",
		      "Value": {
				    "Ref": "DynamoDatabase"
		      }
		    }
	  }
}