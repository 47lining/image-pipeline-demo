cd ~/.nucleator/contrib/bucketandq/sqs_worker/
sh ../bin/worker_package

app_url="file://$HOME/.nucleator/contrib/bucketandq/sqs_worker.zip"

echo "Enter the customer name: "
read customer
echo "Enter the cage name: "
read cage
echo "Enter the app_name for the stacksets: "
read app_name
echo "Enter the username for the redshift cluster: "
read username
echo "Enter the password for the redshift cluster: "
read password
echo "Enter the app version for the beanstalk stackset: "
read app_version

nucleator redshift provision --customer $customer --cage $cage --cluster_name $app_name --username $username --password $password --public true

echo "Enter the $app_name redshift endpoint url from the aws console: "
read redshift_url

nucleator bucketandq provision --customer $customer --cage $cage --app_name $app_name --redshift_username $username --redshift_password $password --redshift_url $redshift_url

echo "Enter the $app_name sqs url from the aws console: "
read queue_url

nucleator beanstalk provision --customer $customer --cage $cage --type nodejs --tier worker --app_name $app_name --queue_url $queue_url
nucleator beanstalk configure --customer $customer --cage $cage
nucleator beanstalk deploy --customer $customer --cage $cage --app_name $app_name --app_version $app_version --app_url $app_url
